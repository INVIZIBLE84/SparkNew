# .env.example

# Server Configuration
PORT=5000
NODE_ENV=development
API_BASE_URL=http://localhost:5000/api
FRONTEND_URL=http://localhost:3000

# Firebase Configuration
# Obtain from Firebase Console (Service Account Key)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# PostgreSQL Configuration
# For analytics database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vedant_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
DB_POOL_MAX=5

# Redis Configuration
# For caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
# Secret for signing JWT tokens
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRE=24h

# Email Configuration
# For sending emails (e.g., password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Proximity Settings
# For Wi-Fi/Bluetooth-based attendance verification
WIFI_SSID_WHITELIST=Campus_WiFi,Lab_WiFi
BLUETOOTH_RANGE_METERS=10

# ML Model Settings
# For attendance prediction
ML_MODEL_PATH=./models/attendance_predictor.json
PREDICTION_THRESHOLD=0.75

# Logging Configuration
# Optional: Set log level for winston logger
LOG_LEVEL=debug